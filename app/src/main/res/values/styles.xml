<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主题style -->
    <style name="AppCompatTheme.Base" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!--窗体变成透明，慎用true 设置成true会有很多问题-->
        <item name="android:windowIsTranslucent">false</item>
        <!-- Actionbar color -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/windowbackground</item>
    </style>
    <!--自定义对话框主题-->
    <style name="my_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item> <!-- 去除边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 背景遮罩层 -->
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
    </style>
    <!---->
    <declare-styleable name="StatusBarHeightView">
        <attr name="use_type" format="integer">
            <enum name="use_height" value="0" />
            <enum name="use_padding_top" value="1" />
        </attr>
    </declare-styleable>
</resources>
